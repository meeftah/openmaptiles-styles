{
  "version": 8,
  "sources": {
    "custom": {
      "type": "vector",
      "url": "pmtiles://https://demo-bucket.protomaps.com/v4.pmtiles"
    }
  },
  "glyphs": "https://demotiles.maplibre.org/font/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#cccccc"
      }
    },
    {
      "id": "earth",
      "type": "fill",
      "filter": ["==", "$type", "Polygon"],
      "source": "custom",
      "source-layer": "earth",
      "paint": { "fill-color": "#f7f6f6" }
    },
    {
      "id": "test-label",
      "type": "symbol",
      "source": "custom",
      "source-layer": "places",
      "layout": {
        "text-field": ["get", "name"],
        "text-font": ["Open Sans Regular"],
        "text-size": 14
      },
      "paint": {
        "text-color": "#000000",
        "text-halo-color": "#ffffff",
        "text-halo-width": 2
      }
    }
  ]
}